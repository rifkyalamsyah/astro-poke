---
import Layout from '@layouts/MainLayout.astro';
import Navbar from '@components/Navbar.astro';
import Button from '@components/Button/Primary.astro';
---

<Layout>
  <Navbar />
  <main>
    <section class='py-8'>
      <div class='container mx-auto'>
        <div class='flex flex-col gap-4'>
          <p class='text-center text-8xl font-bold'>
            <span
              class='bg-gradient-to-r from-orange-500 to-gray-300 bg-clip-text text-transparent'
            >
              404
            </span>
          </p>
          <p class='text-center'>Sorry, Page Not Found</p>
          <div class='text-center'>
            <Button href='/' text='Back to Home' />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
